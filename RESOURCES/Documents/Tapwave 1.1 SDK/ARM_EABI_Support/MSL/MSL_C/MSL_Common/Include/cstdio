#if _MSL_WIDE_CHAR && _MSL_C99													/*- mm 030314 -*/
	_MSL_IMP_EXP_C int _MSL_CDECL       fwide(FILE *, int) _MSL_CANT_THROW;     		
#endif /* _MSL_WIDE_CHAR && _MSL_C99*/         									/*- mm 030314 -*/

#ifndef _No_Disk_File_OS_Support
