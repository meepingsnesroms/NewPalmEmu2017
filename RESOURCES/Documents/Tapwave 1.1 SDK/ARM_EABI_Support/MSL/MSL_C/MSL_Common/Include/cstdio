_MSL_IMP_EXP_C char * _MSL_CDECL	    fgets(char * _MSL_RESTRICT, int, FILE * _MSL_RESTRICT) _MSL_CANT_THROW;  	/*- mf 990715 -*/
_MSL_IMP_EXP_C int _MSL_CDECL			fputc(int, FILE *) _MSL_CANT_THROW;  			/*- mf 990715 -*/
