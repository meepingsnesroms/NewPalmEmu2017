_MSL_IMP_EXP_C int _MSL_CDECL			fprintf(FILE * _MSL_RESTRICT, const char * _MSL_RESTRICT, ...) _MSL_CANT_THROW;				/*- mf 990715 -*/
_MSL_IMP_EXP_C int _MSL_CDECL			fscanf(FILE * _MSL_RESTRICT, const char * _MSL_RESTRICT, ...) _MSL_CANT_THROW; 				/*- mf 990715 -*/
